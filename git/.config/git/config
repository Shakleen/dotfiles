    diff = diff-so-fancy | $PAGER 

[diff-so-fancy]
    markEmptyLines = false

[color "diff"]
    meta        = black bold
    frag        = magenta
    context     = white 
    whitespace  = yellow reverse
    old         = red

[interactive]
    diffFilter = diff-so-fancy --patch
    singlekey = true

[push]
    autoSetRemote = true
    default = current
    followTags= true

[pull]
    fault = current
    rebase = true

